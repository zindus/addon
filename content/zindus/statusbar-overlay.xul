<?xml-stylesheet href="chrome://zindus/skin/zindus.css" type="text/css"?>

<!DOCTYPE window SYSTEM "chrome://zindus/locale/zindus.dtd">

<overlay xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" >

	<statusbarpanel id="zindus-statusbar-progress" >
		<label value="&zindus.statusbar.progress.leftmost.label;" />
		<stack>
			<progressmeter id="zindus-statusbar-progress-meter" style="&zindus.statusbar.progress.meter.style;" value="50%" mode="normal" />
			<label         id="zindus-statusbar-progress-text"  style="&zindus.statusbar.progress.text.style;"  value=""
			               crop="&zindus.statusbar.progress.text.crop;" />
		</stack>
	</statusbarpanel>

	<statusbarpanel id="zindus-statusbar-state" >
		<image id="zindus-statuspanel-logo"                            src="chrome://zindus/content/zindus16x16-bw.gif"       />
		<image id="zindus-statuspanel-logo-processing"   hidden="true" src="chrome://zindus/content/zindus-processing-bw.gif" />
		<label id="zindus-statuspanel-alert"             hidden="true" value="!" />
		<label id="zindus-statuspanel-error"             hidden="true" value="X" />
		<label id="zindus-statuspanel-insync"            hidden="true" value="Y" />
	</statusbarpanel>
</overlay>
